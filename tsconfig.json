{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"lib": ["ES2023"],
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"allowImportingTsExtensions": true,
		"noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		"__tests__"
	]
}
