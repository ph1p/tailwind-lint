{
	"name": "tailwind-lint",
	"version": "0.4.3",
	"description": "A command-line tool that uses the Tailwind CSS IntelliSense plugin to show linting suggestions for your Tailwind CSS classes",
	"keywords": [
		"tailwindcss",
		"tailwind",
		"linter",
		"lint",
		"cli",
		"diagnostics",
		"intellisense",
		"css",
		"utility-first",
		"code-quality"
	],
	"homepage": "https://github.com/ph1p/tailwind-lint#readme",
	"bugs": {
		"url": "https://github.com/ph1p/tailwind-lint/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ph1p/tailwind-lint.git"
	},
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/ph1p"
	},
	"license": "MIT",
	"author": "Philip Stapelfeldt <me@ph1p.dev>",
	"type": "module",
	"bin": {
		"tailwind-lint": "./dist/cli.cjs"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"format": "biome check --write",
		"lint": "biome check",
		"prepublishOnly": "pnpm build && pnpm test",
		"start": "node dist/cli.cjs",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@tailwindcss/language-service": "^0.14.29",
		"chalk": "^5.6.2",
		"commander": "^14.0.2",
		"fast-glob": "^3.3.3",
		"vscode-languageserver-textdocument": "^1.0.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.12",
		"@types/node": "^25.0.10",
		"tsdown": "^0.20.1",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.28.1",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
