{
	"name": "tailwind-lint",
	"version": "0.7.0",
	"description": "A command-line tool that uses the Tailwind CSS IntelliSense plugin to show linting suggestions for your Tailwind CSS classes",
	"keywords": [
		"cli",
		"code-quality",
		"css",
		"diagnostics",
		"intellisense",
		"lint",
		"linter",
		"tailwind",
		"tailwindcss",
		"utility-first"
	],
	"homepage": "https://github.com/ph1p/tailwind-lint#readme",
	"bugs": {
		"url": "https://github.com/ph1p/tailwind-lint/issues"
	},
	"license": "MIT",
	"author": "Philip Stapelfeldt <me@ph1p.dev>",
	"repository": {
		"type": "git",
		"url": "https://github.com/ph1p/tailwind-lint.git"
	},
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/ph1p"
	},
	"bin": {
		"tailwind-lint": "./dist/cli.cjs"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"type": "module",
	"types": "./dist/linter.d.ts",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"format": "oxfmt --write .",
		"format:check": "oxfmt --check .",
		"lint": "oxlint .",
		"lint:fix": "oxlint --fix .",
		"prepublishOnly": "pnpm build && pnpm test",
		"start": "node dist/cli.cjs",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@tailwindcss/language-service": "^0.14.29",
		"chalk": "^5.6.2",
		"commander": "^14.0.3",
		"fast-glob": "^3.3.3",
		"postcss": "^8.5.6",
		"vscode-languageserver-textdocument": "^1.0.12"
	},
	"devDependencies": {
		"@types/node": "^25.2.2",
		"oxfmt": "^0.28.0",
		"oxlint": "^1.43.0",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.0.0"
	},
	"packageManager": "pnpm@10.29.1"
}
